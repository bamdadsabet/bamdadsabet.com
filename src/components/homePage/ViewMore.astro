---
interface Props {
  title: string;
  href: string;
}

const { title, href } = Astro.props;
---

<a class="view-more" rel="noopener noreferrer nofollow" target="_blank" href={href}>{title}</a>

<style>
  .view-more {
    margin: auto;
    margin-top: 4rem;
    padding-bottom: 3rem;
    width: fit-content;
    display: block;
    color: #0ea5e9;
    cursor: pointer;
    text-decoration: underline;
    text-decoration-color: #0ea5e9;
    text-decoration-thickness: 1px;
    text-underline-offset: 4px;
    transition: all 0.3s;
    -decoration-color: $sky-600;
  }
</style>
