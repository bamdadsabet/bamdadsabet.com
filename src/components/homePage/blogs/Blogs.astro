---
import BlogCard from "./BlogCard.astro";
import ImageSrc from "../../../assets/images/profile.jpg";
import SectionTitle from "../SectionTitle.astro";
import ViewMore from "../ViewMore.astro";

// #FIXME
interface Props {
  id: string;
}

const { id } = Astro.props;

// FIXME add real href
const blogs = [
  {
    title: "Can coffee make you a better developer?",
    image: { src: ImageSrc, alt: "blog post" },
    description:
      "Lorem, ipsum dolor sit amet consectetur adipisicing elit. Eius, libero eaque aut odio voluptatem magnam reprehenderit",
    date: "Aug 18",
    href: "#"
  },
  {
    title: "Can coffee make you a better developer?",
