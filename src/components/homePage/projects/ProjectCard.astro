---
interface Props {
  title: string
  description: string
  technologies: string[]
  isEven?: boolean
  image: {
    src: string
    alt: string
  }
  links: {
    github: string
    liveDemo: string
  }
}

const {
  title,
  description,
  technologies,
  image,
  links,
  isEven = false
} = Astro.props
---

<section class:list={['card', {'card--even': isEven}]}>
    <section class='content'>
        <h1>{ title }</h1>
        <p>{ description }</p>
        <div class="tag-set">
          {
            technologies.map(technology => <span class="tag">#{ technology }</span>)
          }
        </div>
        <div class='button__container'>
          <a
            href={links.liveDemo} 
            class='button'
          >
            View Project
          </a>
          <a 
            href={links.github}
            class="button"
          >
            github 
          </a>
        </div>
    </section>
    <img 
      src={image.src} 
      alt={image.alt}  
    />
</section>

<style lang="scss">
  .card {
    display: flex;
    padding: 0 2rem;
    justify-content: center;
    margin-bottom: 16rem;
    align-items: center;
    column-gap: 6rem;
    &--even {
      flex-direction: row-reverse;
    }
    @include media("lg") {
      width: 100%;
      margin-bottom: 6rem;
      max-width: none;
      flex-direction: column-reverse;
    }
    @include media("sm") {
      padding: 0 1rem;
    }

  }
  .content {
    max-width: 34.375rem;
    width: 50%;
    h1 {
      margin-bottom: 1rem;
      font-size: 1.875rem;
      line-height: 2.25rem;
      color: #475569;
      @include media("lg") {
        font-size: 1.5rem;
        line-height: 2rem;
        margin-bottom: 0.5rem
      }
    }
    p {
      margin-bottom: 2rem;
      color: #64748b;
      @include media("lg") {
        padding-left: 0.4rem;
        font-size: 0.875rem;
        line-height: 1.25rem;
      }
      @include media("lg", "~md") {
        margin-bottom:1.5rem;
      }
      @include media("md") {
        margin-bottom:1.25rem;
      }
    }
    @include media("lg", "~md") {
      width: 90%;
      max-width: 43.75rem;
    }
    @include media('md') {
      width: 100%;
      max-width: none;
    }
  }
  .tag-set {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    column-gap: 1rem;
    row-gap: 1.5rem;
    padding-bottom: 0.5rem;
    margin-bottom: 2rem;
    @include media("lg", "~md") {
      margin-bottom: 1.5rem
    }
    @include media("md") {
      margin-bottom:1.25rem;
    }
  }
  .tag-set, h1 {
    @include media("lg") {
      padding-left: 0.125rem
    }
  }
  .tag {
    display: inline-block;
    border-radius: 500px;
    padding: 0.25rem 0.75rem;
    font-size: 0.875rem;
    font-weight: 600;
    color: #64748b;
    background-color: #e5e7eb;
    @include media("lg") {
      font-size: 0.75rem;
      line-height: 1rem;
    }
  }
  .button {
    cursor: pointer;
    width: 12.5rem;
    height: 3.75rem;
    display: inline-block;
    position: relative;
    border-radius: 0.19rem;
    display: flex;
    align-items: center;
    justify-content: center;
    &__container {
      display: flex;
      justify-content: flex-start;
      padding: 0 0.25rem;
      column-gap: 1rem;
      align-items: center;
      @include media("md") {
        flex-direction: column;
        justify-content: center;
        row-gap: 1rem;
      }
    }
    @include media ("~lg") {
      border: 2px solid #9ca3af;
      transition: color 300ms 100ms, border 300ms 100ms;
      overflow: hidden;
      color: #64748b;
      &:before {
        content: '';
        width: 25rem;
        height: 25rem;
        position: absolute;
        top: -10.625rem;
        left: -6.25rem;
        border-radius: 50%;
        z-index: -10;
        transition: box-shadow 500ms;
      }
      &:hover {
        color: #e5e7eb;
        border-color: #1e293b;
        &:before {
          box-shadow: inset 0 0 0 200px #1e293b;
        }
      }
    }
    @include media ("lg") {
      background-color: #1e293b;
      border-color: #1e293b; 
      color: #e5e7eb;
      width: 100%;
      font-size: 0.875rem;
    }
  }
  img {
    border-radius: 0.5rem;
    max-width: 34.375rem;
    width: 50%;
    height: auto;
    @include media("lg", "~md") {
      width: 90%;
      max-width: 43.75rem;
      margin-bottom: 1.5rem
    }
    @include media("md") {
      width: 100%;
      max-width: none;
      margin-bottom: 1.25rem
    }
  }
</style>