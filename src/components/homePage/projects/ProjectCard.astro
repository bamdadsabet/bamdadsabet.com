---
import { Image } from "astro:assets";

interface Props extends ISectionContent {
  technologies: string[];
  image: {
    src: ImageMetadata;
    alt: string;
  };
  links: {
    github?: string;
    liveDemo?: string;
  };
}

const { title, description, technologies, image, links } = Astro.props;
---

<section class="card">
  <section class="content">
    <h1 data-animation="fade-in-down">{title}</h1>
    <p data-animation="fade-in-down">{description}</p>
    <div class="tag-set">
      {
        technologies.map((technology) => (
          <span class="tag" data-animation="zoom-in">
            #{technology}
          </span>
        ))
      }
    </div>
    <div class="button__container">
      {
        links?.liveDemo &&
        <a href={links.liveDemo} rel="noopener noreferrer nofollow" target="_blank"  class="button" data-animation="zoom-in">
          View Project
        </a>
      }
      {
        links?.github &&
        <a href={links.github} rel="noopener noreferrer nofollow" target="_blank"  class="button" data-animation="zoom-in">
          github
        </a>
      }
    </div>
  </section>
  <Image src={image.src} alt={image.alt} data-animation="zoom-in" />
</section>

<style lang="scss">
  .card {
    display: flex;
    padding: 0 2rem;
    justify-content: center;
    margin-bottom: 16rem;
    align-items: center;
    column-gap: 6rem;
    &:nth-of-type(odd) {
      flex-direction: row-reverse;
      .button {
        &:first-of-type {
          animation-delay: 0.3s;
        }
        &:last-of-type {
          animation-delay: 0.5s;
        }
      }
      .tag {
        @for $i from 1 through 4 {
          &:nth-child(#{$i}) {
            animation-delay: #{(0.2s + ($i * 0.15s))};
          }
        }
      }
    }
    @include media("lg") {
      width: 100%;
      margin-bottom: 6rem;
      max-width: none;
      flex-direction: column-reverse !important;
    }
    @include media("sm") {
      padding: 0 1rem;
      margin-bottom: 2.75rem;
    }
  }
  .content {
    max-width: 34.375rem;
    width: 50%;
    h1 {
      animation-duration: 1.2s;
      margin-bottom: 1rem;
      font-size: 1.875rem;
      line-height: 2.25rem;
      color: $slate-600;
      @include media("lg") {
        font-size: 1.5rem;
        line-height: 2rem;
        margin-bottom: 0.5rem;
      }
    }
    p {
      animation-duration: 1.2s;
      margin-bottom: 2rem;
      color: $slate-500;
      @include media("lg") {
        padding-left: 0.4rem;
        font-size: 0.875rem;
        line-height: 1.25rem;
      }
      @include media("lg", "~md") {
        margin-bottom: 1.5rem;
      }
      @include media("md") {
        margin-bottom: 1.25rem;
      }
    }
    @include media("lg", "~md") {
      width: 90%;
      max-width: 43.75rem;
    }
    @include media("md") {
      width: 100%;
      max-width: none;
    }
  }
  .tag-set {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    column-gap: 1rem;
    row-gap: 1.5rem;
    padding-bottom: 0.5rem;
    margin-bottom: 2rem;
    @include media("lg", "~md") {
      margin-bottom: 1.5rem;
    }
    @include media("md") {
      margin-bottom: 1.5rem;
    }
  }
  .tag-set, h1 {
    @include media("lg") {
      padding-left: 0.125rem;
    }
  }
  .tag {
    animation-duration: 0.8s;
    display: inline-block;
    border-radius: 500px;
    padding: 0.25rem 0.75rem;
    font-size: 0.875rem;
    font-weight: 600;
    color: $slate-500;
    background-color: #e5e7eb;
    @for $i from 1 through 4 {
      &:nth-child(#{$i}) {
        animation-delay: #{(0.2s + ((3 - $i) * 0.15s))};
        @include media("lg") {
          animation-delay: #{(0.2s + ($i * 0.15s))};
        }
      }
    }
    @include media("lg") {
      font-size: 0.75rem;
      line-height: 1rem;
    }
  }
  .button {
    animation-duration: 0.8s;
    width: 16.5rem;
    height: 3.75rem;
    display: inline-block;
    position: relative;
    border-radius: 0.19rem;
    display: flex;
    align-items: center;
    justify-content: center;
    &__container {
      display: flex;
      justify-content: flex-start;
      padding: 0 0.25rem;
      column-gap: 1rem;
      align-items: center;
      @include media("md") {
        flex-direction: column;
        justify-content: center;
        row-gap: 1rem;
      }
    }
    &:first-of-type {
      animation-delay: 0.5s;
      @include media("lg") {
        animation-delay: 0.3s;
      }
    }
    &:last-of-type {
      animation-delay: 0.3s;
      @include media("lg") {
        animation-delay: 0.5s;
      }
    }
    @include media("~lg") {
      border: 2px solid $gray-400;
      transition:
        color 0.3s 0.1s,
        border 0.3s 0.1s;
      overflow: hidden;
      color: $slate-500;
      &:before {
        content: "";
        width: 25rem;
        height: 25rem;
        position: absolute;
        top: -10.625rem;
        left: -4.25rem;
        border-radius: 50%;
        z-index: -10;
        transition: box-shadow 500ms;
      }
      &:hover {
        color: #e5e7eb;
        border-color: $slate-800;
        &:before {
          box-shadow: inset 0 0 0 200px $slate-800;
        }
      }
    }
    @include media("lg") {
      background-color: $slate-800;
      border-color: $slate-800;
      color: #e5e7eb;
      width: 100%;
      font-size: 0.875rem;
    }
  }
  img {
    animation-duration: 1s;
    border-radius: 0.5rem;
    max-width: 34.375rem;
    width: 50%;
    height: auto;
    aspect-ratio: 1.6;
    object-fit: cover;
    @include media("lg", "~md") {
      width: 90%;
      max-width: 43.75rem;
      margin-bottom: 1.5rem;
    }
    @include media("md") {
      width: 100%;
      max-width: none;
      margin-bottom: 1.25rem;
    }
  }
</style>
