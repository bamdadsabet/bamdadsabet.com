---
const navs = [
  {
    title: "HOME",
    href: "#"
  },
  {
    title: "ABOUT",
    href: "#about-section"
  },
  {
    title: "EXPERIENCES",
    href: "#experiences-section"
  },
  {
    title: "PROJECTS",
    href: "#projects-section"
  },
  {
    title: "CONTACT",
    href: "#contact-section"
  }
];
---

<nav class="navbar">
  <span id="navbar__hamburger" class:list={["navbar__hamburger"]}>
    <svg viewBox="0 0 100 100">
      <path
        class="line line-1"
        d="M 20,29.000046 H 80.000231 C 80.000231,29.000046 94.498839,28.817352 94.532987,66.711331 94.543142,77.980673 90.966081,81.670246 85.259173,81.668997 79.552261,81.667751 75.000211,74.999942 75.000211,74.999942 L 25.000021,25.000058"
      ></path>
      <path class="line line-2" d="M 20,50 H 80"></path>
      <path
        class="line line-3"
        d="M 20,70.999954 H 80.000231 C 80.000231,70.999954 94.498839,71.182648 94.532987,33.288669 94.543142,22.019327 90.966081,18.329754 85.259173,18.331003 79.552261,18.332249 75.000211,25.000058 75.000211,25.000058 L 25.000021,74.999942"
      ></path>
    </svg>
  </span>
  <div class="navbar__nav-container">
    <ul>
      {
        navs.map(({ title, href }) => (
          <li>
            <a href={href}>{title}</a>
          </li>
        ))
      }
    </ul>
  </div>
</nav>

<style lang="scss">
  .navbar {
    width: 100%;
    height: 5rem;
    position: sticky;
    top: 0;
    z-index: 10;
    background-color: $navbar-bg;
    border-bottom: 4px $slate-800;
    &__hamburger {
      visibility: hidden;
      color: white;
      cursor: pointer;
      position: absolute;
      right: 1.25rem;
      padding-top: 0.5rem;
      .line {
        fill: none;
        stroke: white;
        stroke-width: 4;
        transition:
          stroke-dasharray 600ms cubic-bezier(0.4, 0, 0.2, 1),
          stroke-dashoffset 600ms cubic-bezier(0.4, 0, 0.2, 1);
        &-1,
        &-3 {
          stroke-dasharray: 60 207;
        }
        &-2 {
          stroke-dasharray: 60 60;
        }
      }
      svg {
        height: 3.125rem;
        width: 3.125rem;
      }
      @include media("md") {
        visibility: visible;
      }
    }
    &--open {
      .navbar__nav-container {
        @include media("md") {
          height: 30rem;
          visibility: visible;
        }
      }
    }
    &--open .line {
      &-1,
      &-3 {
        stroke-dasharray: 90 207;
        stroke-dashoffset: -134;
      }
      &-2 {
        stroke-dasharray: 1 60;
        stroke-dashoffset: -30;
      }
    }
    &__nav-container {
      position: static;
      overflow: hidden;
      padding-right: 1.5rem;
      padding-left: 1rem;
      display: flex;
      height: 5rem;
      ul {
        background-color: rgba(16, 24, 32, 0.97);
        border-bottom: 4px $slate-800;
        display: flex;
        align-items: center;
        column-gap: 3rem;
        li {
          display: flex;
          justify-content: center;
          border-bottom-width: 0;
          border-bottom-color: $slate-800;
          @include media("md") {
            border-bottom-width: 0.5rem;
            width: 100%;
            height: 5rem;
            display: flex;
            align-items: center;
          }
        }
        @include media("lg") {
          width: 100%;
          column-gap: 2rem;
        }
        @include media("md") {
          border-bottom: none;
          flex-direction: column;
          column-gap: 0;
        }
      }
      @include media("md") {
        transition: height cubic-bezier(0.4, 0, 0.2, 1) 0.25s 0.25s;
        position: relative;
        top: 4rem;
        padding-left: 0;
        padding-right: 0;
        flex-direction: column;
        height: 0;
      }
    }
    a {
      color: white;
      transition-duration: 200ms;
      &:hover,
      &.active-nav {
        color: $orange-400;
      }
    }
    @include media("md") {
      height: 4rem;
    }
  }
</style>

<script src="./script.ts"></script>